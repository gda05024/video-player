{
  "name": "Video",
  "version": "0.1.0",
  "description": "Mildang video/audio player components with XState state machine",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./video": {
      "types": "./dist/video.d.ts",
      "import": "./dist/video.mjs",
      "require": "./dist/video.js"
    },
    "./audio": {
      "types": "./dist/audio.d.ts",
      "import": "./dist/audio.mjs",
      "require": "./dist/audio.js"
    },
    "./captions": {
      "types": "./dist/captions.d.ts",
      "import": "./dist/captions.mjs",
      "require": "./dist/captions.js"
    },
    "./machine": {
      "types": "./dist/machine.d.ts",
      "import": "./dist/machine.mjs",
      "require": "./dist/machine.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "xstate": "^4.38.3",
    "@xstate/react": "^3.2.2",
    "react-player": "^2.14.1",
    "hls.js": "^1.5.7",
    "media-captions": "^1.0.4",
    "screenfull": "^6.0.2",
    "wavesurfer.js": "^7.8.0",
    "axios": "^1.6.7"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "video",
    "player",
    "react",
    "hls",
    "xstate",
    "audio",
    "wavesurfer"
  ],
  "license": "MIT"
}
